<div class="container quote-forms">
	<div class="row">
		<div class="col-md-12 margin-bottom padding-bottom">
			<h3 class="text-center" id="title">
				Add New Quote
			</h3>
			<%= link_to('Back to student page', student_path(@student.id), class: "student_back_link") %>
		</div>
	</div>
	<div class="row padding-bottom margin-bottom">
		<div class="col-md-12">
			<%= form_for(@quote, :url => student_quotes_path(:student_id => @student.id)) do |f| %>

				<%= render(:partial => "form", :locals => {:f => f})%>

				<%= submit_tag("Create Quote", :class => 'btn btn-success', :id=>"create-quote") %>

			<% end %>
		</div>
	</div>
</div>
