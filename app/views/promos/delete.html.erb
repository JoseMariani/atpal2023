<div class="container">
  <div class="row">
    <div class="col-md-7 col-center margin-top margin-bottom">
      <ul class="nav nav-tabs nav-justified red" id="margin-top">
        <li class="nav-item pagination-centered text-center" id="">
          <%= link_to "show promotion", promo_path(:id => @promo.id) %>
        </li>
        <li>
          <%= link_to "Edit promo", edit_promo_path(:id => @promo.id)%>
        </li>
        <li>
          <%= link_to "Promo index", promos_path %>
        </li>
      </ul>
    </div>
  </div>
  <% if @promo.errors.full_messages.any? %>
      <% @promo.errors.full_messages.each do |error_message| %>
          <div class="notice flash-notice margin-top">
            <%= error_message if @promo.errors.full_messages.first == error_message %><br />
          </div>
      <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center" id="margin-bottom">
        Delete Promo
      </h3>
    </div>
  </div>
  <div class="row" id="soft-borders">
    <div class="col-md-6" id="soft-borders">
      <table class="table table-striped" id="margin-top">
        <tr>
          <th>Type</th>
          <td><%= @promo.description %></td>
        </tr>
        <tr>
          <th>Percentage (if any)</th>
          <td><%= @promo.percentage %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-6">
      <h3>
        Are you sure you want to delete this promotion?
      </h3>
      <p id="margin-top">
        <%= form_for(:promo, :url => promo_path(:id => @promo.id), :html => { :method => :delete }) do |f| %>

            <%= submit_tag("Delete promo", :class=>"btn btn-danger") %>

        <% end %>
      </p>
    </div>
  </div>
</div>
