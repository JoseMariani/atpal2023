<div class="container">
  <div class="row">
    <div class="col-md-4 col-center margin-top margin-bottom">
      <ul class="nav nav-tabs nav-justified red" id="margin-top">
        <li class="nav-item">
          <%= link_to "Program index", programs_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Show program", program_path(:id => @program.id) %>
        </li>
      </ul>
    </div>
  </div>
	<div class="row">
		<div class="col-md-12">
			<h3 class="text-center">
				Edit Program
			</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12" id="margin-bottom">
			<%= form_for(@program, :url => program_path, :html => {:method => :put}) do |f| %>
			
				<%= render(:partial => "form", :locals => {:f => f})%>
				
				<%= submit_tag("Save program", :class => 'btn btn-success', :id=>"margin-top")%>
				
			<% end %>
		</div>
	</div>
</div>
