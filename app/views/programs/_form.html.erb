<div class="form-group">
	<%= f.label(:title, "Type")%>
	<%= f.text_field(:title, :class=>"form-control") %>
</div>

<div class="form-group section-white col-md-12 padding-top padding-bottom" id="hours">
	<%= f.fields_for :hours do |hour| %>
		<%= render(:partial => "hour_fields", :locals => {:f => hour}) %>
	<% end %>
	<div class="links">
		<%= link_to_add_association "Add hour", f, :hours, class: "btn btn-primary btn-block" %>
	</div>
</div>

<div class="form-group section-white col-md-12 padding-top padding-bottom" id="weeks">
  <%= f.fields_for :weeks do |week| %>
      <%= render(:partial => "week_fields", :locals => {:f => week}) %>
  <% end %>
  <div class="links">
    <%= link_to_add_association "Add week range", f, :weeks, class: "btn btn-primary btn-block" %>
  </div>
</div>

<div class="form-group">
  <%= f.label(:lessons_per_week, "Lessons per week")%>
  <%= f.text_field(:lessons_per_week, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:time_table, "Time table")%>
  <%= f.text_field(:time_table, :class=>"form-control") %>
</div>


