<div class="container">
  <div class="row">
    <div class="col-md-4 col-center margin-top margin-bottom">
      <ul class="nav nav-tabs nav-justified red" id="margin-top">
        <li class="nav-item">
          <%= link_to "Program index", programs_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Edit program", edit_program_path(:id => @program.id) %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row section-white inner-padding padding-top">
    <h3 class="header3-bottom text-center margin-bottom">Program info</h3>
    <div class="col-md-12" id="student-table">
      <table class="table table-bordered table-striped table-hover margin-top">
        <tr>
          <th>type</th>
          <td><%= @program.title %></td>
        </tr>
        <tr>
          <th>number of hours per week</th>
          <% @program.hours.each do |hour|%>
              <td><%= hour.number %></td>
          <% end %>
        </tr>
        <tr>
          <th>Lessons per week</th>
          <td><%= @program.lessons_per_week %></td>
        </tr>
        <tr>
          <th>Time Table</th>
          <td><%= @program.time_table %></td>
        </tr>
      </table>

      <h5 class="header5-bottom margin-bottom">Costs per duration</h5>
      <table class="table table-bordered table-striped table-hover">
        <% @program.weeks.each do |week| %>
        <thead>
        <th><%= week.number %> weeks</th>
        </thead>
        <tbody>
            <tr>
              <td><%= to_cad(week.cost) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

