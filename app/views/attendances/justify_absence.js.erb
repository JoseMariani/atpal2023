$("html, body").animate({ scrollTop: 0 }, 700);
<% if @attendance.errors.any? %>
  $('.container').html("<div class=\"alert alert-warning fade in\"><button class=\"close\" data-dismiss=\"alert\">x</button><%= @attendance.errors.full_messages.join(', ') %></div>\n");
<% else %>
  $('.container').html("<div class=\"alert alert-success fade in\"><button class=\"close\" data-dismiss=\"alert\">x</button>Absence justified for <%= @attendance.evaluation.study_period.student.first_name %></div>\n");
<% end %>
$('#attendance_<%= @attendance.id %>').html("<%= j render "attendances/attendance_row", attendance: @attendance %>")
$('#attendance_line_chart').html("<%= j render "attendances/chart_partials/line_chart", charted_attendances: @charted_attendances %>")
$('#attendance_pie_chart').html("<%= j render "attendances/chart_partials/pie_chart", charted_attendances: @charted_attendances %>")
