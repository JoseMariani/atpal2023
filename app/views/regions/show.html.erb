<div class="container">
  <div class="row">
    <div class="col-md-7 col-center margin-top margin-bottom">
      <ul class="nav nav-tabs nav-justified red" id="margin-top">
        <li class="nav-item pagination-centered text-center" id="">
          <%= link_to "Edit region", edit_region_path(:id=> @region.id) %>
        </li>
        <li>
          <%= link_to "Region index", regions_path %>
        </li>
        <li>
          <%= link_to "Create regions", new_region_path %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" id="student-table">
      <table class="table table-bordered table-striped table-hover">
        <tr>
          <th>Name</th>
          <td><%= @region.name %></td>
        </tr>
        <tr>
          <th>Promos</th>
          <td>
            <ul>
              <% @region.promos.each do |promo| %>
                  <li><%= promo.description %></li>
              <% end %>
            </ul>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

