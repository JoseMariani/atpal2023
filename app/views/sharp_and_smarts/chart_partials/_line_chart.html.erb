<h5 class="text-center header4-bottom">
  Grade flow chart
</h5>
<% limit = charted_sns.size > 31? 15 : charted_sns.size %>
<%= line_chart [{name: "Daily score", data: charted_sns.group(:date).flat_map.take(limit).map{|t| [t.date, t.daily_score_converted] }}], library: {vAxis: {
    viewWindow: {
        min: -3,
        max: 105
    },
    ticks: [0, 25, 50, 75, 100]}, hAxis: {format: 'dd/MM/yy' }, curveType: 'function', legend: { position: 'right'}} %>
