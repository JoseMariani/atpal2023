<div class="modal-dialog modal-lg">
	<div class="modal-content">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h4 class="modal-title" id="myModalLabel">Edit Target</h4>
	  </div>
	  <div class="modal-body">
	  <%= form_for(:target, :url => target_path(:evaluation_id => @evaluation.id, :target_id => @target.id, detail_view: @detail_view), remote:true, :html => {:method => :put, :id =>"edit_target_form"}) do |f| %>
	    <div class="form-group field col-xs-12">
	<div class="">
		<%= f.label(:date, "Date of entry")%>
		<%= f.text_field(:date, :class=>"form-control datepicker", :id=>"") %>
	</div>

	<div class="">
		<%= f.label(:description, "Description")%>
		<%= f.text_field(:description, :class=>"form-control", :id=>"description") %>
	</div>

	<div class="">
		<%= f.label(:student_input, "Student feedback")%>
		<%= f.text_field(:student_input, :class=>"form-control", :id=>"student_input") %>
	</div>
</div>

<div class="col-xs-12"><%= f.radio_button :letter_grade, "A", :id=>"target_a" %> <%= f.label :letter_grade, "A"%></div>

<div class="col-xs-12"><%= f.radio_button :letter_grade, "B", :id=>"target_b" %> <%= f.label :letter_grade, "B"%></div>

<div class="col-xs-12"><%= f.radio_button :letter_grade, "C", :id=>"target_c" %> <%= f.label :letter_grade, "C"%></div>


	  </div>
	  <div class="modal-footer">
	    <%= submit_tag("Save Daily Target", :class => 'btn btn-success', :id=>"update_target") %>
	  </div>
	  <% end %>
	</div>
</div>
