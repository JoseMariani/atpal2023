<div class="container">
  <div class="row">
    <div class="col-md-7 col-center margin-top margin-bottom">
      <ul class="nav nav-tabs nav-justified red" id="margin-top">
        <li class="nav-item">
          <%= link_to "Agency index", agencies_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Show agency", agency_path(:id => @agency.id) %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center">
        Edit agency
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3" id="margin-bottom">
      <%= form_for(@agency, :url => agency_path, :html => {:method => :put}) do |f| %>

          <%= render(:partial => "form", :locals => {:f => f})%>

          <%= submit_tag("Save agency", :class => 'btn btn-success', :id=>"margin-top")%>

      <% end %>
    </div>
  </div>
</div>

