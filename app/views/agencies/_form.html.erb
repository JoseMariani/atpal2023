<div class="form-group">
  <%= f.label(:name, "Name of the agency")%>
  <%= f.text_field(:name, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:country, "Country")%>
  <%= f.text_field(:country, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:address, "Address")%>
  <%= f.text_field(:address, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:phone_number, "Phone number")%>
  <%= f.text_field(:phone_number, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:email, "Email")%>
  <%= f.text_field(:email, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:commission, "Commission?")%>
  <%= f.select(:commission, ['Commission', 'No Commission'], {:include_blank => "Choose an option"}, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:users, "Allow marketers to view this agency")%>
  <%= collection_select(:agency, :user_ids, User.agent_or_marketer, :id, :complete_name, {:prompt => true, :class=>"form-control"}, :multiple => true) %>
</div>

<div class="form-group" id="contacts">
  <%= f.fields_for :contacts do |contact| %>
      <%= render(:partial => "contact_fields", :locals => {:f => contact}) %>
  <% end %>
  <div class="links">
    <%= link_to_add_association "Add contact", f, :contacts, class: "btn btn-primary btn-block" %>
  </div>
</div>



