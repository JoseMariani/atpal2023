<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h3 class="text-center">
				Edit Student
			</h3>
			<%= link_to('Back to student page', student_path(@student.id), class: "student_back_link") %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12" id="margin-bottom">
			<%= form_for(@student, :url => student_path(:id => @student.id), :html => {:id => "new_student", :method => :put}) do |f| %>

				<%= render(:partial => "form", :locals => {:f => f})%>

				<%= submit_tag("Save Student", :class => 'btn btn-success', :id=>'edit_submit')%>

			<% end %>
		</div>
	</div>
</div>
