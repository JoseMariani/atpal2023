<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h3 class="text-center" id="margin-bottom">
				Delete Student
			</h3>
		</div>
	</div>
	<div class="row" id="soft-borders">
		<div class="col-md-6" id="soft-borders">
      <%= image_tag @student.image_url(:thumb).to_s, :id => "wide-borders" %>
			<table class="table table-striped" id="margin-top">
				<tr>
					<th>Name</th>
					<td><%= @student.first_name %></td>
				</tr>
				<tr>
					<th>Last Name</th>
					<td><%= @student.last_name %></td>
				</tr>
				<tr>
					<th>Date of Birth</th>
					<td><%= @student.date_of_birth %></td>
				</tr>
				<tr>
					<th>Nationality</th>
					<td><%= @student.nationality %></td>
				</tr>
			</table>
		</div>
		<div class="col-md-6">
			<h3>
				Are you sure you want to delete <%= @student.first_name %>?
			</h3>
			<p id="margin-top">
			<%= form_for(:student, :url => student_path(:id => @student.id), :html => { :method => :delete }) do |f| %>
			
				<%= submit_tag("Delete student", :class=>"btn btn-danger") %>
			
			<% end %>
			</p>
		</div>
	</div>
</div>