                        <%= check_box_tag 'student_ids[]', student.id, false, disabled: student.current_study_period_with_active_eval.nil?, id: "student-id-#{student.id}" %>
                      </th>
                      <td>
                        <%= student.complete_name_cap %>
                      </td>
                      <td>
                        <%= student.study_period_with_active_eval_start_date %>
                      </td>
                      <td>
                        <%= student.study_period_with_active_eval_end_date %>
                      </td>
                      <td>
                        <% if student.age.to_s.empty? %>
                            <%= student.get_age %>
                        <% else %>
                            <%= student.age %>
                        <% end %>
                      </td>
                      <td>
                        <%= student.nationality %>
                      </td>
                      <td>
                        <%= student.gender %>
                      </td>
                      <td>
                        <%= student.level.humanize %>
                      </td>
                      <td>
                        <%= student.group.humanize %>
                      </td>
                      <td>
                        <%= student.study_period_with_active_eval_course_language.try(:humanize) %>
                      </td>
                      <td>
                        <%= student.status %>
                      </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
              <%= submit_tag "Update Students", class: "mass_edit_update" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>