                <tr>
                  <th>
                  </th>
                  <th>
                    Name
                  </th>
                  <th>
                    Starting date
                  </th>
                  <th>
                    End date
                  </th>
                  <th>
                    Age
                  </th>
                  <th>
                    Nationality
                  </th>
                  <th>
                    Gender
                  </th>
                  <th>
                    Level
                  </th>
                  <th>
                    Group
                  </th>
                  <th>
                    Language
                  </th>
                  <th>
                    Status
                  </th>
                </tr>
                </thead>
                <tbody>
                <% @students.select { |student| student.already_started_study_period? }.each do |student| %>
