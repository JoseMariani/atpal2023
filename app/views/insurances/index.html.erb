<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center">
        Insurance Index
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-center margin-top margin-bottom">
      <ul class="nav nav-tabs nav-justified red" id="margin-top">
        <li class="nav-item pagination-centered text-center" id="">
          <%= link_to "Create insurance", new_insurance_path %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 section-white"  id="student-panel">
      <h3 class="header3-bottom margin-bottom">
        List of Insurance
      </h3>
      <table class="table responsive no-wrap table-stu table-striped table-responsive table-hover margin-top" id="program_table">
        <thead>
        <tr>
          <th>
            #
          </th>
          <th>
            Name
          </th>
          <th>
            Cost
          </th>
          <th>
            Actions
          </th>
        </tr>
        </thead>
        <tbody>
        <% @count = 0 %>
        <% @insurances.each do |insurance|%>
            <tr>
              <td>
                <%= @count += 1 %>
              </td>
              <td>
                <%= insurance.name %>
              </td>
              <td>
                <%= insurance.cost %>
              </td>
              <td>
                <%= link_to "Edit Insurance", edit_insurance_path(insurance.id) %>

                <%= link_to "Delete insurance", insurance_path(insurance.id), method: 'delete' %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
