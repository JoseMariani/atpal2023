<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center">
        Payment Index
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 margin-top padding-bottom padding-top section-white" id="student-panel soft-borders">
      <h3 class="header3-bottom margin-bottom">
        List of payments
      </h3>
      <table class="table responsive no-wrap table-stu table-striped table-responsive table-hover margin-top" id="program_table">
        <thead>
        <tr>
          <th>
            #
          </th>
          <th>
            Name of student
          </th>
          <th>
            Date
          </th>
          <th>
            Amount
          </th>
          <th>
            Delete
          </th>
        </tr>
        </thead>
        <tbody>
        <% @count = 0 %>
        <% @payments.each do |payment|%>
            <tr>
              <td>
                <%= @count += 1 %>
              </td>
              <td>
                <% if payment.student.nil? %>

                <% else %>
                  <%= payment.student.first_name %> <%= payment.student.last_name %>
                <% end %>
              </td>
              <td>
                <% if payment.date.nil? %>
                    Not yet assigned
                <% else %>
                    <%= payment.date %>
                <% end %>
              </td>
              <td>
                <%= to_cad(payment.amount) %>
              </td>
              <td>
                <%= link_to "Delete payment", delete_payment_path(payment.id) %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
        </div>
    </div>
  </div>
</div>
