<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center" id="margin-bottom">
        Delete Payment
      </h3>
    </div>
  </div>
  <div class="row" id="soft-borders">
    <div class="col-md-6" id="soft-borders">
      <table class="table table-striped" id="margin-top">
        <tr>
          <th>Amount</th>
          <td><%= @payment.amount %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-6">
      <h3>
        Are you sure you want to delete this payment from <%= @payment.student.first_name %> <%= @payment.student.last_name %>?
      </h3>
      <p id="margin-top">
        <%= form_for(:payment, :url => payment_path(:id => @payment.id), :html => { :method => :delete }) do |f| %>

            <%= submit_tag("Delete payment", :class=>"btn btn-danger") %>

        <% end %>
      </p>
    </div>
  </div>
</div>

