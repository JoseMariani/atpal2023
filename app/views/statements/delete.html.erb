<div class="container">
  <div class="row">
    <div class="col-md-3 col-center margin-top margin-bottom">
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center" id="margin-bottom">
        Delete Statement
      </h3>
    </div>
  </div>
  <div class="row" id="soft-borders">
    <div class="col-md-6" id="soft-borders">
      <table class="table table-striped" id="margin-top">
        <tr>
          <th>Type</th>
          <td><%= @statement.student.first_name %>  <%= @statement.student.last_name %>?</td>
        </tr>
      </table>
    </div>
    <div class="col-md-6">
      <h3>
        Are you sure you want to delete this statement?
      </h3>
      <p id="margin-top">
        <%= form_for(:quote, :url => statement_path(:id => @statement.id), :html => { :method => :delete, :id=>"promo_select" }) do |f| %>

            <%= submit_tag("Delete quote", :class=>"btn btn-danger") %>

        <% end %>
      </p>
    </div>
  </div>
</div>
