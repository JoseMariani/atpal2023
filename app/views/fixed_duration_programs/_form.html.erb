<div class="form-group">
  <%= f.label(:name, "Name of Program")%>
  <%= f.text_field(:name, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:duration_weeks, "Duration in weeks")%>
  <%= f.text_field(:duration_weeks, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:cost, "Cost")%>
  <%= f.text_field(:cost, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:time_table, "Time table")%>
  <%= f.text_field(:time_table, :class=>"form-control") %>
</div>

<div class="form-group">
  <%= f.label(:promo, "Promotion")%>
  <%= f.collection_select :promo_ids, Promo.order('description DESC'), :id, :description,
                          {:include_blank => "Choose a promotion"}, { :multiple => true, :class=>"form-control"} %>
</div>

